<% provide(:title, "Reset Password") %>
<h2 class="form-header">Reset Password</h2>

<div class="row full-form">
  <div class="col-md-12">

    <%= form_for(:password_reset, url: password_resets_path, html: { class: 'form-horizontal' }) do |f| %>

      <div class="row">
        <div class="col-md-8 col-md-offset-2">

        <p class="center">Please enter your email address below, and a password reset email will be sent to you.</p>
        <br/>
          <div class="form-group">
            <%= f.label :email, class: "col-md-4 control-label" %>
            <div class="col-md-5">
            <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="col-md-2 col-md-offset-5 col-xs-4 col-xs-offset-4 col-sm-4 col-sm-offset-4">
          <div class="form-group">
            <%= f.submit "Update Password", class: "btn btn-primary form-control form-button" %>
          </div>
        </div>

      <% end %>
      </div>
    </div>
  </div>
