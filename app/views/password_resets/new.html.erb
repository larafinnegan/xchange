<h2 class="form-header">Reset Password</h2>

<div class="row full-form">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email, class: "col-md-12 control-label" %>
      <%= f.email_field :email, class: 'form-control' %>
      </div>
      </div>

<div class="row full-form">
      <div class="col-md-2 col-md-offset-5 col-xs-12 col-sm-12">
      <%= f.submit "Submit", class: "btn btn-primary form-button form-control" %>
    <% end %>
  </div>
</div>
