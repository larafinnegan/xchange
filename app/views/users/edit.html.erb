<% provide(:title, "Edit Account") %>
<h2 class="form-header">Update Your Profile</h2>
<div class="row full-form">
  <div class="col-md-12">
<%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= render 'users/form_fields', f: f %>

<% if current_user.individual %>
<%= render 'users/individual_fields', f: f %>
<% else %>
<%= render 'users/poster_fields', f: f %>
<% end %>

<div class="row">
  <div class="col-md-2 col-md-offset-5 col-xs-4 col-xs-offset-4 col-sm-4 col-sm-offset-4">
    <div class="form-group">
      <br/>
      <%= f.submit "Update Account", class: "btn btn-primary form-button form-control" %>
    </div>
  </div>
</div>
  <% end %>
  </div>
  </div>
