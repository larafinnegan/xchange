<h2 class="form-header">Log In</h2>

<div class="row full-form">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "col-md-12 control-label" %>
      <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :password, class: "col-md-12 control-label" %>
      <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group checkbox">
      <%= f.label :remember_me, class: "checkbox inline control-label" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      </div>

<div class="row">
      <div class="col-md-2 col-md-offset-5 col-xs-12 col-sm-12">
    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-primary form-button form-control" %>
      </div>
      </div>
    <% end %>
</div>

<div class="row">
      <div class="col-md-8 col-md-offset-4 col-xs-12 col-sm-12">
<p><%= link_to "Register", register_path %> | <%= link_to "Lost your password?", new_password_reset_path %></p>
    </div>
    </div>
</div>