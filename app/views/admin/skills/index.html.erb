<% provide(:title, "Manage Skills") %>

<h2 class="form-header">Manage Skills</h2>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<div><%= link_to "Add New Skill", new_admin_skill_path, class: "btn btn-sm view-button" %>
<br/>
<br/>
</div>
<div class="table-responsive">
  <table class="table table-bordered table-striped" id="sortable">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Update
        </th>
        <th>
          Delete
        </th>
      </tr>
    </thead>
    <tbody>
      <% @skills.each do |s| %>
      <tr data-item-id=<%= "sdfsf" %> class="item">
        <td>
          <%= s.name %>
        </td>
        <td>
          <%= link_to "Update", edit_admin_skill_path(s), class: "red" %>
          </td>
          <td>
          <%= link_to "Delete", admin_skill_path(s), method: :delete, data: { confirm: "Are you sure you want to delete this skill?" }, class: "red" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
<br/>
<br/>
